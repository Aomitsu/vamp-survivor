    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Game",
            "cargo": {
                "args": [
                    "build",
                    "--bin=vamp-survivor",
                    "--package=vamp-survivor"
                ],
                "filter": {
                    "name": "vamp-survivor",
                    "kind": "bin"
                }
            },
            "env": {
                    "RUST_BACKTRACE": "1",
                    "RUST_LOG": "debug"
                },
            "cwd": "${workspaceFolder}"
        }
    ]
}